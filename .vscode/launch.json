{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "lldb - command line args",
      "program": "${workspaceFolder}/bin/commandLineArgs",
      "args": ["hello", "1", "-c", "bye"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "(gdb) Pointers", // Change name
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/pointers", // THIS IS IMPORTANT
      "args": [], // add comma separated list of args here.
      "stopAtEntry":  true, // THIS IS IMPORTANT 
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ],
      "preLaunchTask": "runMake", // THIS IS IMPORTANT
    },
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/main", // THIS IS IMPORTANT
      "args": [],
      "stopAtEntry": true, // THIS IS IMPORTANT 
      "cwd": "${workspaceFolder}",  
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "runMake", // THIS IS IMPORTANT
    }
  ]
}
